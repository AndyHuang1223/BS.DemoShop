@using BS.DemoShop.Web.ViewModels.Product
@model ProductViewModel
@{
    var product = Model;
    ViewData["Title"] = product.Name;
}

<form method="post">
    <h2>產品資訊</h2>
    <img src="@product.ImgPath" alt="@product.Name" />
    <div class="form-group">
        <label asp-for="@Model.Id"></label>
        <input asp-for="@Model.Id" class="form-control" readonly/>
        <span asp-validation-for="@Model.Id" class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.ImgPath"></label>
        <input asp-for="@Model.ImgPath" class="form-control" />
        <span asp-validation-for="@Model.ImgPath" class="text-danger"></span>
    </div>
    
    <h3>規格:</h3>
    @Html.EditorFor(m=>m.ProductDetails)
    <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="Update">更新</button>
    <button type="submit" class="btn btn-danger" asp-controller="Product" asp-action="Delete">刪除</button>
    <div class="mt-3">
        <p class="h6 text-muted">建立時間:@product.CreatedTime</p>
        <p class="h6 text-muted">最後編輯時間:@product.LastUpdatedTime</p>
    </div>
</form>
