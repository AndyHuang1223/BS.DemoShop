@using BS.DemoShop.Web.ViewModels
@model CreateProductViewModel
@{
    ViewData["Title"] = "Create";

}

<h1>CreateProduct</h1>

<div class="row">
    <div class="col-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name" class="form-control" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImgPath"></label>
                <input asp-for="@Model.ImgPath" class="form-control" />
                <span asp-validation-for="@Model.ImgPath" class="text-danger"></span>
            </div>
            @Html.EditorFor(m => m.ProductDetail)
            <div class="form-group">
                <button type="submit" class="btn btn-outline-info w-100" asp-controller="Product" asp-action="CreateProductDetail">加入新規格</button>
            </div>

            <button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="CreateProduct">新增(專用型Repository)</button>
            @*<button type="submit" class="btn btn-primary" asp-controller="Product" asp-action="CreateProductByUnitOfWork">新增(UnitOfWork)</button>*@
        </form>
    </div>
</div>